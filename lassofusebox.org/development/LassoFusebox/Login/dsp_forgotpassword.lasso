<script language="JavaScript" type="text/JavaScript">function submitTo(fa) {	var action = "[$self]?fuseaction=" + fa;	document.frmPassword.action = action;	document.frmPassword.submit();}</script><h1>Forgot Password</h1><form action="" method="post" name="frmPassword"><table align="center" width="500" cellpadding="4" cellspacing="0">	<tr>		<td align="left" colspan="2">		<p>If you have forgotten your password, please fill in your email address below.<br>To view your information on screen, click the <strong>"Show Hint"</strong> button.<br>To have your password emailed to you, click the <strong>"Email Password"</strong> button.</p>		</td>	</tr>	<tr>		<td colspan="2">&nbsp;</td>	</tr>	<tr valign="middle">		<td align="left" width="100">Email:</td>		<td align="right">		<input type="text" name="email" size="50" maxlength="50" value="">		</td>	</tr>	<tr>		<td colspan="2">&nbsp;</td>	</tr>	<tr>		<td colspan="2" align="right">		<input type="button" name="[$xfa_showhint]" value="&nbsp;&nbsp;Show Hint&nbsp;&nbsp;" onClick="submitTo(this.name);">		<input type="button" name="[$xfa_emailpassword]" value="&nbsp;&nbsp;Email Password&nbsp;&nbsp;" onClick="submitTo(this.name);">		</td>	</tr>	<tr>		<td colspan="2">&nbsp;</td>	</tr></table></form>